{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/**/*.ts"]
}
